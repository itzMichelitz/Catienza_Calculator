<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/btnnum7"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@id/btnnum9"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnnum8"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btnnum9"
        android:layout_toEndOf="@+id/btnnum7"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnnum9"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/btnnum8"
        android:text="9"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnnum7"
        android:layout_alignTop="@id/btnnum7"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:text="4"
        android:textSize="25sp" />.

    <Button
        android:id="@+id/btn5"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:text="5"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btn4"
        android:layout_toEndOf="@+id/btn5"
        android:text="6"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn4"
        android:layout_alignTop="@id/btn4"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:text="1"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:text="2"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btn1"
        android:layout_toEndOf="@+id/btn2"
        android:text="3"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btnclear"
        android:layout_toEndOf="@+id/btnclear"
        android:text="0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn1"
        android:layout_alignTop="@id/btn1"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:text="CLEAR"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btndecimal"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btnclear"
        android:layout_toEndOf="@+id/btn0"
        android:text="."
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btnclear"
        android:layout_toEndOf="@+id/btndecimal"
        android:text="="
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btn1"
        android:layout_toEndOf="@+id/btn3"
        android:text="+"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/btn4"
        android:layout_toEndOf="@+id/btn6"
        android:text="-"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@id/btnnum9"
        android:layout_toEndOf="@+id/btnnum9"
        android:text="รท"
        android:textSize="25sp" />


</RelativeLayout>